doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='/lights.css')
  body
    div.wrapper
      - for(var index = 10; index < 60; index += 10)
        div.row
          div.col.toggle.red
            input(type='checkbox', name='channel-' + (index+2), data-channel=index+2, id='channel-' + (index+2))
            label(for='channel-' + (index+2))
          div.col.toggle.green
            input(type='checkbox', name='channel-' + (index+3), data-channel=index+3, id='channel-' + (index+3))
            label(for='channel-' + (index+3))
          div.col.toggle.blue
            input(type='checkbox', name='channel-' + (index+4), data-channel=index+4, id='channel-' + (index+4))
            label(for='channel-' + (index+4))
          div.col.toggle.white
            input(type='checkbox', name='channel-' + (index+5), data-channel=index+5, id='channel-' + (index+5))
            label(for='channel-' + (index+5))
          div.col.pattern Pattern
              input(type='radio', name='channel-' + (index+6), value='0', id='channel-' + (index+6) + '-1', data-channel=index+6)
              label(for='channel-' + (index+6) + '-1')
              input(type='radio', name='channel-' + (index+6), value='50', id='channel-' + (index+6) + '-2', data-channel=index+6)
              label(for='channel-' + (index+6) + '-2')
              input(type='radio', name='channel-' + (index+6), value='100', id='channel-' + (index+6) + '-3', data-channel=index+6)
              label(for='channel-' + (index+6) + '-3')
              input(type='radio', name='channel-' + (index+6), value='150', id='channel-' + (index+6) + '-4', data-channel=index+6)
              label(for='channel-' + (index+6) + '-4')
          div.col Flash
            input(type='range', name='channel-' + (index+7), min='0', max='255', class='slider', value='0', data-channel=index+7)
    div.row
      div.clientCount.col
    script(type='text/javascript', src='/lights.js')
